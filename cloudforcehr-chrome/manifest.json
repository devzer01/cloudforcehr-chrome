{
  	"name": "cloudforcehr-chrome",
  	"description": "Enable Chrome to use cloudforcehr",
  	"version": "1.01",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
      		"https://clients.cloudforcehr.com/CFM/HM/login.aspx*", "activeTab"
    	],
  	"icons": {
  		"16": "images/icon-16.png",
  		"128": "images/icon-128.png"
  	},
	"content_scripts" : [{
		"matches" : ["https://clients.cloudforcehr.com/CFH/HM/login.aspx*" ],
        	"js" : ["scripts/index.js"],
		"run_at" : "document_end"

    	}],
	"homepage_url" : "https://github.com/devzer01/cloudforcehr-chrome",
	
  }
