{
  	"name": "cloudforcehr-chrome",
  	"description": "Enable Chrome to use cloudforcehr",
  	"version": "1",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
      		"tabs", "https://clients.cloudforcehr.com/*", "activeTab"
    	],
  	"icons": {
  		"16": "images/icon-16.png",
  		"128": "images/icon-128.png"
  	},
	"content_scripts" : [{
		"matches" : ["https://clients.cloudforcehr.com/*" ],
        	"js" : ["scripts/index.js"],
		"run_at" : "document_end"

    	}]
  }
