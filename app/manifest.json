{
  	"name": "cloudforcehr-chrome",
  	"description": "Enable Chrome to use cloudforcehr",
  	"version": "1",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
      "tabs", "https://clients.cloudforcehr.com/CFH/HM/login.aspx*"
    ],
  	"icons": {
  		"16": "images/icon-16.png",
  		"128": "images/icon-128.png"
  	},
  	"app": {
  		"background": {
  			"scripts": [
  				"scripts/main.js",
  				"scripts/chromereload.js"
  			]
  		}
  	}
  }
